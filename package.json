{
  "name": "uv-vscode",
  "displayName": "uv",
  "publisher": "karpetrosyan",
  "description": "",
  "version": "0.16.0",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "extensionDependencies": [
    "ms-python.python"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/karpetrosyan/uv-vscode.git"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "uv configuration",
      "properties": {
        "uv.noConfigForScripts": {
          "type": "boolean",
          "default": true,
          "description": "If true, uv will ignore configurations when running PEP 723 compatible scripts."
        }
      }
    },
    "commands": [
      {
        "command": "uv-vscode.selectScriptInterpreter",
        "category": "uv",
        "title": "Select Script Interpreter"
      },
      {
        "command": "uv-vscode.exitScriptEnvironment",
        "category": "uv",
        "title": "Exit Script Environment"
      },
      {
        "command": "uv-vscode.removeDependency",
        "category": "uv",
        "title": "Remove Dependency"
      },
      {
        "command": "uv-vscode.addDependency",
        "category": "uv",
        "title": "Add Dependency"
      },
      {
        "command": "uv-vscode.initScript",
        "category": "uv",
        "title": "Initialize Script"
      }
    ]
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src tests",
    "check": "eslint src tests && prettier --check src tests",
    "fix": "eslint --fix src tests && prettier --write src tests",
    "test": "vitest",
    "tsc": "tsc"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.10",
    "@types/mocha-each": "^2.0.4",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.39.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@vscode/python-extension": "^1.0.5",
    "fs-extra": "^11.3.0",
    "readline": "^1.3.0"
  }
}
